<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/base.css') }}">
        <link rel="stylesheet" href="{{ asset('css/seance.css') }}">
        <link rel="stylesheet" href="{{ asset('css/img.css') }}">
        {% endblock %}

    </head>
    <body>
        <header>
            <div class="gainXp_logo">
                <img src="{{ asset('img/gainXp.png')}}" alt="logo de l'app, 2 haltères + le nom" class="gainXp_logo">
            </div>
            {% if app.user %}
                <div class="user_header">
                    <div class="user_avatar">
                        <img src="{{ asset('img/avatar1.png') }}" alt="img avatar" class="logo_user">
                    </div>
                    <div class="user_infos">
                        <h4>{{ app.user.prenom }}</h4>
                        <div class="user_xp_lvl">
                            <p>Level {{ app.user.niveau }}</p>
                            <p>Xp {{ app.user.xp }}</p>
                        </div>  
                    </div>
                </div>
            {% endif %}
        </header>
        <section id="main">
            <nav>
                <div class="menu_nav">
                    <div class="dashboard">
                        <img src="{{ asset('img/data.png') }}" alt="logo dashboard" class="nav_logo">
                        <a href="{{ path('dashboard') }}">Tableau de bord</a>
                    </div>
                    <div class="mes_seances">
                        <img src="{{ asset('img/weight.png') }}" alt="logo haltère" class="nav_logo">
                        <a href="{{ path('list_seance')}}">Mes Séances</a>
                    </div>
                    <div class="statistiques">
                        <img src="{{ asset('img/stat.png') }}" alt="logo tableau de stats" class="nav_logo">
                        <a href="">Statistiques</a>
                    </div>
                    <div class="badges_defis">
                        <img src="{{ asset('img/star.png') }}" alt="logo étoile" class="nav_logo">
                        <a href="{{ path('badge')}}">Badges / Défis</a>
                    </div>
                    <div class="profil_user">
                        <img src="{{ asset('img/settings.png')}}" alt="logo engrenage" class="nav_logo">
                        <a href="">Profil</a>
                    </div>
                </div>
            </nav>
            <div class="body_content">
                {% block body %}
                {% endblock %}
            </div>
        </section>

        {% block javascripts %}
        <script src="{{ asset('js/main.js') }}"></script>
        {% endblock %}
    </body>
</html>
